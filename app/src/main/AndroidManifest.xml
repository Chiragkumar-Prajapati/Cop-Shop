<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ctrlaltelite.copshop">

    <application
        android:name=".logic.CopShopApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.ListingListActivity"
            android:label="CopShop - Listings"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.CreateListingActivity"
            android:label="CopShop - Create Listing"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.LoginActivity"
            android:label="CopShop - Log in" />
        <activity android:name=".presentation.CreateAccountActivity" />
    </application>

</manifest>