<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".presentation.CreateListingActivity"
    tools:showIn="@layout/activity_create_listing">

    <TextView
        android:id="@+id/txtViewListName2"
        android:layout_width="8dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="455dp"
        android:text=":"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/txtEndTimeHour"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtEndTimeMinute"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/txt_field_border"
        android:ems="10"
        android:hint="  MM"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintStart_toEndOf="@+id/txtViewListName2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtStartTimeMinute"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/txt_field_border"
        android:ems="10"
        android:hint="  MM"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintStart_toEndOf="@+id/txtViewListName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtViewListName"
        android:layout_width="8dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="395dp"
        android:text=":"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/txtStartTimeHour"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelEndTimeSep"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="460dp"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/txtEndYear"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelAuctionDur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="340dp"
        android:text="Auction Duration:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="580dp"
        android:text="Description: *"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtEndYear"
        android:layout_width="53dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/txt_field_border"
        android:ems="10"
        android:hint=" YYYY"
        android:inputType="number"
        android:maxLength="4"
        app:layout_constraintStart_toEndOf="@+id/txtEndMonth"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtEndMonth"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/txt_field_border"
        android:ems="10"
        android:hint="  MM"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintStart_toEndOf="@+id/txtViewListName15"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtViewListName15"
        android:layout_width="18dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="460dp"
        android:text="/"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/txtEndDay"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtEndDay"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/txt_field_border"
        android:ems="10"
        android:hint="  DD"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="460dp"
        android:text="End:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtStartMonth"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/txt_field_border"
        android:ems="10"
        android:hint="  MM"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintStart_toEndOf="@+id/txtViewListName5"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtViewListName5"
        android:layout_width="18dp"
        android:layout_height="44dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="400dp"
        android:text="/"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/txtStartMonth"
        app:layout_constraintStart_toEndOf="@+id/txtStartDay"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="400dp"
        android:text="Start:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelMinBid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="280dp"
        android:text="Minimum Bid: *"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelInitialPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="220dp"
        android:text="Initial Price: *"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtInitialPrice"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/txt_field_border"
        android:ems="10"
        android:hint="30.00"
        android:inputType="number|numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtListingTitle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/txt_field_border"
        android:ems="10"
        android:hint="Bicycle"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtMinBid"
        android:layout_width="213dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/txt_field_border"
        android:ems="10"
        android:hint="1.00"
        android:inputType="number|numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelListingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:text="Listing Title: *"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtStartDay"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/txt_field_border"
        android:ems="10"
        android:hint="  DD"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtStartYear"
        android:layout_width="53dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/txt_field_border"
        android:ems="10"
        android:hint=" YYYY"
        android:inputType="number"
        android:maxLength="4"
        app:layout_constraintStart_toEndOf="@+id/txtStartMonth"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtStartTimeHour"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/txt_field_border"
        android:ems="10"
        android:hint="  HH"
        android:inputType="time"
        android:maxLength="2"
        app:layout_constraintStart_toEndOf="@+id/labelStartTimeSep"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtEndTimeHour"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/txt_field_border"
        android:ems="10"
        android:hint="  HH"
        android:inputType="time"
        android:maxLength="2"
        app:layout_constraintStart_toEndOf="@+id/labelEndTimeSep"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtAreaDescription"
        android:layout_width="373dp"
        android:layout_height="144dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/txt_field_border"
        android:ems="10"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:gravity="top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCreateListing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="464dp"
        android:layout_marginTop="740dp"
        android:background="#1A5276"
        android:text="Create"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="398dp"
        android:layout_height="57dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="60dp"
        android:text="Enter new listing information below:"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelStartTimeSep"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="400dp"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/txtStartYear"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelRequiredFields"
        android:layout_width="209dp"
        android:layout_height="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="375dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="* indicates a required field"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAreaDescription" />

</android.support.constraint.ConstraintLayout>